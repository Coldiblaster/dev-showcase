  "workflows": {
    "title": "Workflows Comuns",
    "subtitle": "// fluxos do dia a dia",
    "description": "Passo a passo dos fluxos de trabalho mais comuns no Git.",
    "items": [
      {
        "name": "Criar Feature",
        "steps": [
          "git checkout main",
          "git pull origin main",
          "git checkout -b feature/nome-da-feature",
          "# Desenvolva e faça commits...",
          "git push -u origin feature/nome-da-feature",
          "# Abra um Pull Request"
        ]
      },
      {
        "name": "Resolver Conflito de Merge",
        "steps": [
          "git checkout feature/minha-feature",
          "git merge main",
          "# Resolva os conflitos nos arquivos marcados",
          "git add .",
          "git commit -m \"fix: resolve merge conflicts\"",
          "git push"
        ]
      },
      {
        "name": "Hotfix em Produção",
        "steps": [
          "git checkout main",
          "git pull origin main",
          "git checkout -b hotfix/descricao-do-bug",
          "# Corrija o bug",
          "git commit -m \"fix: descricao do bug\"",
          "git push -u origin hotfix/descricao-do-bug",
          "# Abra PR para main e develop"
        ]
      },
      {
        "name": "Desfazer Último Commit (não pushed)",
        "steps": [
          "# Manter mudanças (unstaged)",
          "git reset HEAD~1",
          "",
          "# Manter mudanças (staged)",
          "git reset --soft HEAD~1",
          "",
          "# Descartar tudo",
          "git reset --hard HEAD~1"
        ]
      }
    ]
  },
